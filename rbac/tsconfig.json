{
  "compilerOptions": {
 
    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true ,                            
    "rootDir": ".",
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@/*":["*"]
    }
  },
  "include":["src","server.ts","**/*.ts"],
  "exclude": ["node_modules","nodemon.json"]
}
